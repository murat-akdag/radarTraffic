                                android:id="@+id/ManualText"
                                android:textColor="#000"
                                android:textSize="12dp"/>
                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.101"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ManualEditText"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:hint="Komut Giriniz..."
                            android:background="@null"
                            android:typeface="monospace"
                            android:width="250dp"

                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gönder"
                            android:layout_marginRight="3dp"
                            android:id="@+id/ManualBtn"
                            android:background="@drawable/buton_selector"
                            android:textColor="@drawable/buton_text_color"
                            />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>